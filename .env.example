# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here-generate-new-one-for-production

# Database - PostgreSQL
# Local development: Use your local PostgreSQL
# Production: Set this in Render environment variables
DATABASE_URL=postgresql://username:password@localhost:5432/ahp_app

# CORS Settings
CORS_ALLOW_ALL_ORIGINS=True

# Email (development)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Social Auth (optional - get these from respective providers)
GOOGLE_OAUTH2_CLIENT_ID=your-google-client-id
GOOGLE_OAUTH2_CLIENT_SECRET=your-google-client-secret
KAKAO_OAUTH2_CLIENT_ID=your-kakao-client-id
KAKAO_OAUTH2_CLIENT_SECRET=your-kakao-client-secret
NAVER_OAUTH2_CLIENT_ID=your-naver-client-id
NAVER_OAUTH2_CLIENT_SECRET=your-naver-client-secret